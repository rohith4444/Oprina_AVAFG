# =============================================================================
# OPRINA API ENVIRONMENT VARIABLES
# =============================================================================

# Application Environment
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-very-long-and-random

# Database (Supabase) - REQUIRED
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# Google OAuth - REQUIRED for OAuth functionality
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/oauth/callback

# Frontend URL - Used for OAuth redirects
FRONTEND_URL=http://localhost:3000

# Vertex AI - For AI agent functionality
VERTEX_AI_AGENT_ID=your-vertex-ai-agent-id

# HeyGen - For avatar functionality (optional)
HEYGEN_API_KEY=your-heygen-api-key

# Google Cloud - For voice services (optional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-credentials.json

# JWT Security - REQUIRED for authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Admin Security - For admin endpoints
ADMIN_TOKEN=your-admin-token-change-in-production

# Internal API Security
INTERNAL_API_KEY=your-internal-api-key-change-in-production

# Logging Level
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL OVERRIDES (these have defaults in config.py)
# =============================================================================

# Server Settings (optional - has defaults)
# HOST=0.0.0.0
# PORT=8000

# API Settings (optional - has defaults)
# API_TITLE=Oprina API
# API_VERSION=1.0.0
# CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# OAuth Scopes (optional - has defaults)
# GOOGLE_GMAIL_SCOPES=openid email profile https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/gmail.send
# GOOGLE_CALENDAR_SCOPES=openid email profile https://www.googleapis.com/auth/calendar.readonly https://www.googleapis.com/auth/calendar.events
# GOOGLE_AUTH_SCOPES=openid email profile

# Voice Service Settings (optional - has defaults)
# VOICE_MAX_AUDIO_SIZE_MB=10
# VOICE_DEFAULT_LANGUAGE=en-US
# VOICE_DEFAULT_VOICE_NAME=en-US-Neural2-F

# Rate Limiting (optional - has defaults)
# RATE_LIMIT_PER_MINUTE=60

# Background Tasks (optional - has defaults)
# ENABLE_BACKGROUND_TASKS=true
# TOKEN_REFRESH_INTERVAL_MINUTES=30
# CLEANUP_INTERVAL_HOURS=6

# Backend URL (optional - has default)
# BACKEND_API_URL=http://localhost:8000